{
	"compilerOptions": {
		"moduleResolution": "node",
		"baseUrl": "./src/",
		"paths": {
			"@neat/*": ["./*"],
			"@util/*": ["./util/*"],
			"@core/*": ["./core/*"],
			"@ui/*": ["./ui/*"]
		},
		"target": "es2016",
		"module": "ES6",
		"newLine": "lf",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictBindCallApply": true,
		"skipLibCheck": true
	},
	"include": ["./**/*.ts"]
}
